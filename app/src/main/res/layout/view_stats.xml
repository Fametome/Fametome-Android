<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/block_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:text="@string/stats"
        style="@style/gravure"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="0.33"
            android:src="@drawable/book_mini" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="0.33"
            android:src="@drawable/dialog_mini" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="0.33"
            android:src="@drawable/picture_mini" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/friendNumber"
            android:text="0"
            style="@style/statsText" />

        <TextView
            android:id="@+id/messageSendNumber"
            android:text="0"
            style="@style/statsText" />

        <TextView
            android:id="@+id/faceNumber"
            android:text="0"
            style="@style/statsText" />

    </LinearLayout>



</LinearLayout>