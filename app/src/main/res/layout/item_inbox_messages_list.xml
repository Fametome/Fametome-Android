<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:padding="4dp"
    android:background="@drawable/block_background"
    android:orientation="horizontal" >

    <com.fametome.widget.SquareImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:scaleType="centerCrop"
        android:src="@drawable/picture"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:textSize="@dimen/classic_text_size"
            android:textColor="#000000"
            android:text="-"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/intervalTime"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/gravure"
            android:textSize="16sp"
            android:text="@string/inbox_show"
            android:background="@color/grey"/>

    </RelativeLayout>

</LinearLayout>