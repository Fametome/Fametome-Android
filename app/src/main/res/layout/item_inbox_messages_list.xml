<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fametome="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:padding="4dp"
    android:background="@drawable/block_background"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="25"
        android:scaleType="centerCrop"
        android:src="@drawable/picture_mini"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:layout_marginLeft="4dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:text="-"/>

        <com.fametome.widget.LoadingButton
            android:id="@+id/showFlash"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/username"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/gravure"
            android:textSize="16sp"
            android:text="@string/inbox_show"
            fametome:background="@color/background"
            fametome:loadingBackground="@color/white"/>

    </RelativeLayout>

</LinearLayout>